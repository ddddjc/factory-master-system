<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djc.mapper.PermissionsMapper">

    <resultMap type="com.djc.entity.Permissions" id="PermissionsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="permission" column="permission" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="PermissionsMap">
        select id,
               role,
               permission
        from permissions
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="PermissionsMap">
        select
        id, role, permission
        from permissions
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
            <if test="permission != null and permission != ''">
                and permission = #{permission}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--关键字模糊查询-->
    <!--<select id="queryAll" resultMap="PermissionsMap">
        SELECT * FROM permissions
        where xxx LIKE CONCAT('%', #{keyWord}, '%')
        LIMIT #{num} OFFSET (#{page} - 1) * #{num}
    </select>-->


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from permissions
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
            <if test="permission != null and permission != ''">
                and permission = #{permission}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into permissions(role, permission)
        values (#{role}, #{permission})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into permissions(role, permission)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.role}, #{entity.permission})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into permissions(role, permission)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.role}, #{entity.permission})
        </foreach>
        on duplicate key update
        role = values(role),
        permission = values(permission)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update permissions
        <set>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
            <if test="permission != null and permission != ''">
                permission = #{permission},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from permissions
        where id = #{id}
    </delete>

</mapper>

