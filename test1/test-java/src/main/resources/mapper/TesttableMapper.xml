<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djc.mapper.TesttableMapper">

    <resultMap type="com.djc.entity.Testtable" id="TesttableMap">
        <result property="aaid" column="aaid" jdbcType="INTEGER"/>
        <result property="bbid" column="bbid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TesttableMap">
        select aaid,
               bbid
        from testtable
        where aaid = #{aaid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TesttableMap">
        select
        aaid, bbid
        from testtable
        <where>
            <if test="aaid != null">
                and aaid = #{aaid}
            </if>
            <if test="bbid != null">
                and bbid = #{bbid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--关键字模糊查询-->
    <!--<select id="queryAll" resultMap="TesttableMap">
        SELECT * FROM testtable
        where xxx LIKE CONCAT('%', #{keyword}, '%')
        LIMIT #{page},#{num}
    </select>-->


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from testtable
        <where>
            <if test="aaid != null">
                and aaid = #{aaid}
            </if>
            <if test="bbid != null">
                and bbid = #{bbid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="aaid" useGeneratedKeys="true">
        insert into testtable()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="aaid" useGeneratedKeys="true">
        insert into testtable()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="aaid" useGeneratedKeys="true">
        insert into testtable()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update

    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update testtable
        <set>
        </set>
        where aaid = #{aaid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from testtable
        where aaid = #{aaid}
    </delete>

</mapper>

