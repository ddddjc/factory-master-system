<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.djc.mapper.GroupMapper">

    <resultMap type="com.djc.entity.Group" id="GroupMap">
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="employeeId" column="employee_id" jdbcType="INTEGER"/>
        <result property="machineid" column="machineId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GroupMap">
        select group_id,
               employee_id,
               machineId
        from group
        where group_id = #{groupId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GroupMap">
        select
        group_id, employee_id, machineId
        from group
        <where>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="employeeId != null">
                and employee_id = #{employeeId}
            </if>
            <if test="machineid != null">
                and machineId = #{machineid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--关键字模糊查询-->
    <!--<select id="queryAll" resultMap="Group">
        SELECT * FROM group
        where xxx LIKE CONCAT('%', #{keyWord}, '%')
        LIMIT #{num} OFFSET (#{page} - 1) * #{num}
    </select>-->


    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from group
        <where>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="employeeId != null">
                and employee_id = #{employeeId}
            </if>
            <if test="machineid != null">
                and machineId = #{machineid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="groupId" useGeneratedKeys="true">
        insert into group(employee_id, machineId)
        values (#{employeeId}, #{machineid})
    </insert>

    <insert id="insertBatch" keyProperty="groupId" useGeneratedKeys="true">
        insert into group(employee_id, machineId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.employeeId}, #{entity.machineid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="groupId" useGeneratedKeys="true">
        insert into group(employee_id, machineId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.employeeId}, #{entity.machineid})
        </foreach>
        on duplicate key update
        employee_id = values(employee_id),
        machineId = values(machineId)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update group
        <set>
            <if test="employeeId != null">
                employee_id = #{employeeId},
            </if>
            <if test="machineid != null">
                machineId = #{machineid},
            </if>
        </set>
        where group_id = #{groupId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from group
        where group_id = #{groupId}
    </delete>

</mapper>

